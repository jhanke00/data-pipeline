{
  "compilerOptions": {
    "rootDir": "../",
    "target": "es2017",
    "types": ["node", "jest"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "paths": {
      "@/*": ["*"],
      "@data/*": ["data/*"],
      "@utils/*": ["src/utils/*"]
    }
  },
  "include": ["**/*"],
  "exclude": ["node_modules"]
}
